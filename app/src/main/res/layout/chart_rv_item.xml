<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chart_ranking_1_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/round_item_bg_green"
    app:layout_constraintTop_toBottomOf="@id/chart_area_ranking_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/chart_ranking_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#1c1c1c"
        android:lineSpacingExtra="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chart_ranking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seoul"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#1c1c1c"
        android:lineSpacingExtra="8sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart_ranking_num"/>

    <TextView
        android:id="@+id/chart_ranking_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7,235,179p"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#23323b"
        android:lineSpacingExtra="2sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/injector_mini"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chart_ranking_point"/>


</androidx.constraintlayout.widget.ConstraintLayout>
